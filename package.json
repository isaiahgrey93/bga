{
  "name": "browser-giving-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@storybook/react": "^3.4.6",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-loadable": "^5.4.0",
    "react-loadable-visibility": "^2.4.2",
    "react-router-dom": "^4.3.1",
    "react-scripts": "1.1.4",
    "styled-components": "^3.3.2"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "lint": "npm-run-all lint:prettier lint:eslint",
    "lint:eslint": "eslint . --fix --max-warnings=0",
    "lint:prettier:": "prettier  --write **/*.css **/*.js **/*.json",
    "visual-reg:compare": "loki test",
    "visual-reg:update": "loki update",
    "storybook": "start-storybook -p 9001 -c .storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*test.{js,jsx}",
      "<rootDir>/.storybook/**/*test.{js,jsx}"
    ],
    "modulePaths": [
      "<rootDir>/src",
      "<rootDir>/.storybook"
    ]
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "fitWindow": true,
        "width": 1280,
        "height": 800
      },
      "chrome.iphone7": {
        "mobile": true,
        "target": "chrome.docker",
        "preset": "iPhone 7"
      },
      "chrome.googlepixel": {
        "mobile": true,
        "target": "chrome.docker",
        "preset": "Google Pixel"
      }
    }
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "^3.4.6",
    "babel-eslint": "^8.2.3",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "husky": "^1.0.0-rc.8",
    "loki": "^0.9.2",
    "npm-run-all": "^4.1.3",
    "prettier": "1.13.4",
    "react-app-rewired": "^1.5.2",
    "react-test-renderer": "^16.4.0"
  }
}
